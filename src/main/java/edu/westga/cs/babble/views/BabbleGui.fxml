<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="200.0" prefWidth="300.0" spacing="5.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.westga.cs.babble.views.BabbleController">
   <children>
      <Label text="Tiles" />
      <ListView fx:id="tileRackField" onMouseClicked="#tileRackClicked" orientation="HORIZONTAL" prefHeight="35.0" prefWidth="280.0">
         <tooltip>
            <Tooltip text="This area contains the tiles available to be used to make a word." />
         </tooltip></ListView>
      <Label text="Your Word" />
      <ListView fx:id="playedWordField" onMouseClicked="#playedWordClicked" orientation="HORIZONTAL" prefHeight="35.0" prefWidth="280.0">
         <tooltip>
            <Tooltip text="This area contains the tiles you have selected to make a word." />
         </tooltip></ListView>
      <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="300.0" spacing="10.0">
         <children>
            <Button accessibleText="Reset" mnemonicParsing="false" onAction="#reset" text="Reset" />
            <Button mnemonicParsing="false" text="Play Word" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="35.0" prefWidth="300.0">
         <children>
            <Label accessibleText="Score" text="Score:">
               <HBox.margin>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </HBox.margin>
            </Label>
            <TextField id="scoreField" fx:id="scoreField" accessibleHelp="Your Current Score" editable="false">
               <tooltip>
                  <Tooltip text="Your current score" />
               </tooltip></TextField>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
